{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["es6", "dom", "es2017"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false, // todo
    "noEmitOnError": false,
    "outDir": "./dist/",
    "strict": false, // todo 
    "target": "es5",
    "sourceMap": true,
    "paths": {
      "*": ["./src/*"]
    },
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}